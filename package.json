{
  "name": "mvc-express",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "setup": "npm i && husky install && npm --prefix ./frontend i",
    "dev": "concurrently -n front,back -c green,yellow -t \"HH:mm:ss\" -p \"{name} {time}\" \"npm --prefix ./frontend run dev\" \"npm run dev-back\"",
    "lint-all": "npm --prefix ./frontend run lint && npm run lint",
    "fix-all": "npm --prefix ./frontend run fix && npm run fix",
    "prepare": "husky install",
    "dev-back": "nodemon index.js",
    "lint": "echo '----- Checking Backend...' && npx prettier --debug-check . && eslint --ext .js . && echo '----- Done!'",
    "fix": "prettier --write . && eslint --fix --ext .js .",
    "heroku-postbuild": "cd frontend && npm install && npm run build"
  },
  "keywords": [],
  "author": "Max Dahl",
  "license": "ISC",
  "rules": {
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ]
  },
  "dependencies": {
    "axios": "^0.26.1",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-fileupload": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "mariadb": "^2.3.3",
    "nanoid": "^3.0.0",
    "sequelize": "^6.18.0",
    "swagger-autogen": "^2.21.1",
    "swagger-ui-express": "^4.3.0",
    "template-fullstack": "file:..",
    "validator": "^13.7.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^7.2.1",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-custom-alias": "^1.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "less": "^4.1.2",
    "nodemon": "^2.0.15",
    "prettier": "2.5.1"
  }
}
